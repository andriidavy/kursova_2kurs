<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:shape="rectangle">

        <TextView
            android:id="@+id/custom_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/custom_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/id_for_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/custom_id_text"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="8dp"
            tools:text="0"/>

        <TextView
            android:id="@+id/status_for_custom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/custom_id_text"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:text="@string/status_text" />

        <TextView
            android:id="@+id/status_for_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/custom_id_text"
            app:layout_constraintStart_toEndOf="@id/status_for_custom_text"
            android:layout_marginEnd="64dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            tools:text="NONE" />

        <Button
            android:id="@+id/button_send_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:text="@string/send_text" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>