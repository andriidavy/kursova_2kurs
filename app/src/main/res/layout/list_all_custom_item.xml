<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:shape="rectangle">

        <TextView
            android:id="@+id/custom_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/custom_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/id_for_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/custom_id_text"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="8dp"
            tools:text="0"/>

        <TextView
            android:id="@+id/status_for_custom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/custom_id_text"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:text="@string/status_text" />

        <TextView
            android:id="@+id/status_for_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/custom_id_text"
            app:layout_constraintStart_toEndOf="@id/status_for_custom_text"
            android:layout_marginEnd="64dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:textStyle="italic"
            tools:text="NONE" />

        <TextView
            android:id="@+id/customer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer"
            app:layout_constraintTop_toBottomOf="@+id/status_for_custom_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:id="@+id/customer_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/status_for_custom_text"
            app:layout_constraintStart_toEndOf="@id/customer_text"
            android:textSize="20sp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"
            android:textStyle="italic"
            tools:text="0" />

        <TextView
            android:id="@+id/customer_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer_name"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/customer_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:id="@+id/customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer_name"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/customer_text"
            app:layout_constraintStart_toEndOf="@id/customer_name_text"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:textStyle="italic"
            tools:text="NULL"
            />

        <TextView
            android:id="@+id/customer_surname_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer_surname"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/customer_name_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:id="@+id/customer_surname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer_name"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/customer_name_text"
            app:layout_constraintStart_toEndOf="@id/customer_surname_text"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:textStyle="italic"
            tools:text="NULL"
            />

        <TextView
            android:id="@+id/employee_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/employee_id_text"
            app:layout_constraintTop_toBottomOf="@+id/customer_surname"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/employee_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/customer_surname"
            app:layout_constraintStart_toEndOf="@id/employee_text"
            android:textSize="20sp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"
            android:textStyle="italic"
            android:visibility="gone"
            tools:text="0" />

        <TextView
            android:id="@+id/employee_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer_name"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/employee_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/employee_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer_name"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/employee_text"
            app:layout_constraintStart_toEndOf="@id/employee_name_text"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:textStyle="italic"
            android:visibility="gone"
            tools:text="NULL"
            />

        <TextView
            android:id="@+id/employee_surname_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer_surname"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/employee_name_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/employee_surname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer_name"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/employee_name_text"
            app:layout_constraintStart_toEndOf="@id/employee_surname_text"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:textStyle="italic"
            android:visibility="gone"
            tools:text="NULL"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>