<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:paddingBottom="20dp"
    android:shape="rectangle">

    <TextView
        android:id="@+id/productListItem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/product_name" />

    <TextView
        android:id="@+id/id_for_product_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="@string/id"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/productListItem_name" />

    <TextView
        android:id="@+id/id_for_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/id_for_product_text"
        app:layout_constraintTop_toBottomOf="@id/productListItem_name"
        tools:text="0" />

    <TextView
        android:id="@+id/count_for_product_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/product_count"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/count_for_product"
        app:layout_constraintTop_toBottomOf="@id/productListItem_name" />

    <TextView
        android:id="@+id/count_for_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="72dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/productListItem_name"
        tools:text="0" />

    <TextView
        android:id="@+id/price_for_product_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/price"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/price_for_product"
        app:layout_constraintTop_toBottomOf="@id/count_for_product" />

    <TextView
        android:id="@+id/price_for_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="3dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/price_symb"
        app:layout_constraintTop_toBottomOf="@id/count_for_product"
        tools:text="0" />

    <TextView
        android:id="@+id/price_symb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="72dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/count_for_product"
        android:text="@string/price_symb" />

</androidx.constraintlayout.widget.ConstraintLayout>