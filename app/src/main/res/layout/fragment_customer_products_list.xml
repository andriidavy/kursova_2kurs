<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_product_catalog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/product_сatalog"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp"
        android:textSize="24sp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/et_search_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_product_catalog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:hint="@string/search_hint"
        android:ems="11"
        android:autofillHints=""
        android:inputType="text" />

    <Button
        android:id="@+id/button_search"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:background="@android:drawable/ic_menu_search"
        app:layout_constraintStart_toEndOf="@id/et_search_field"
        app:layout_constraintTop_toBottomOf="@id/tv_product_catalog" />

    <TextView
        android:id="@+id/tv_search_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_type"
        app:layout_constraintTop_toBottomOf="@id/et_search_field"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:textSize="20sp"
        android:textColor="@color/black" />

    <CheckBox
        android:id="@+id/cb_range_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price_range"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_search_field"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:enabled="false"
        android:alpha="0.5" />

    <Spinner
        android:id="@+id/spinnerChooseSearchType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/choosespinner"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_search_type" />

    <EditText
        android:id="@+id/et_min_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="6"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/cb_range_option"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:textSize="18sp"
        android:hint="@string/min_price"
        android:visibility="gone"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/et_max_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="6"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/et_min_range"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:textSize="18sp"
        android:hint="@string/max_price"
        android:visibility="gone"
        tools:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/productList_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_max_range"
        android:layout_marginTop="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>